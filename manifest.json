{
  "manifest_version": 2,
  "name": "Timetracker for Jira (Firefox)",
  "version": "1.0.0",
  "description": "Log time to Timetracker directly from Jira.",
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "timetracker-for-jira@example.com",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Timetracker Popup",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "*://timetracker.iglu.ee/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://smjira.sm.ee/browse/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    "images/timetrackerlogo.png"
  ]
}
